<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Alternate Fingering"
        android:id="@+id/alternatebassfingering"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/noteimage"
        android:src="@drawable/bass_c"
        android:layout_below="@+id/notename"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="C"
        android:id="@+id/notename"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#010101" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/closed_valve"
        android:text="New Button"
        android:id="@+id/valveone"
        android:layout_alignTop="@+id/valvetwo"
        android:layout_toLeftOf="@+id/valvetwo"
        android:layout_toStartOf="@+id/valvetwo" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/open_valve"
        android:text="New Button"
        android:id="@+id/valvetwo"
        android:layout_alignTop="@+id/valvethree"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/closed_valve"
        android:text="New Button"
        android:id="@+id/valvethree"
        android:layout_below="@+id/noteimage"
        android:layout_toRightOf="@+id/valvetwo"
        android:layout_toEndOf="@+id/valvetwo" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changenotebass"
        android:layout_above="@+id/noteimage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/valvetwo"
        android:layout_toStartOf="@+id/valvetwo" />

</RelativeLayout>